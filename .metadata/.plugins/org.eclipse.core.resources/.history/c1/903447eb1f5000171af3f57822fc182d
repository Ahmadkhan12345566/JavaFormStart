import java.util.Scanner; 
public class loops {

	
	
	
	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Press 1 for for loop \n Press 2 for while loop \n");
	//	String s = scan.next();
		//System.out.println(s);
		System.out.println("Enter tour age : ");
		int z = scan.nextInt();
		System.out.println(z);
		scan.close();
		
		if(z==1){
			// TODO Auto-generated method stub 
			String  str1="i am at 1";
			//use of for loop
			for(int i=0;i<20;i++){
				System.out.println(str1);
				}
		}
		else if(z==2){
			//use of while loop 
			int a=0;
			while(a<5){
			System.out.println("I am in while loop");
			a++;
			}
			}
		else {
			//do while
			int b=0;
			do{
				System.out.println("I am in do while loop");
				b++;
				}while(b<5);
			}
		}
	}
